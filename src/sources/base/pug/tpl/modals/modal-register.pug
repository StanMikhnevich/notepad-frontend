.fixed.pin.inset-0.flex.items-center
    .fixed.pin.inset-0.bg-black.opacity-50.z-10.cursor-pointer(ng-click="$ctrl.close()")

    .relative(class="relative mx-6 md:mx-auto w-full md:w-1/3 lg:w-1/5 z-20 m-8")
        .shadow-2xl.bg-white.rounded-lg.p-5
            .flex.justify-between.modal-header.mb-5
                h2.font-semibold.text-xl Register
                i.mdi.mdi-close.cursor-pointer(ng-click="$ctrl.close()")

            form#AppRegisterForm
                .mb-5
                    label(for="AppAuthRegisterName")
                        input#AppAuthRegisterName.mt-2.p-4.w-full.block.rounded-md.border.border-gray-300.focus_o-300(
                            class="focus:ring focus:ring-gray-300 focus:ring-opacity-50"
                            type="text" name="name" placeholder="Name"
                            ng-model="$ctrl.auth.name" required
                        )
                .mb-5
                    label(for="AppAuthRegisterEmail")
                        input#AppAuthRegisterEmail.mt-2.p-4.w-full.block.rounded-md.border.border-gray-300.focus_o-300(
                            class="focus:ring focus:ring-gray-300 focus:ring-opacity-50"
                            type="email" name="email" placeholder="Email"
                            ng-model="$ctrl.auth.email" required
                        )

                .mb-5
                    label(for="AppAuthRegisterPassword")
                        input#AppAuthRegisterPassword.mt-2.p-4.w-full.block.rounded-md.border.border-gray-300.focus_o-300(
                            class="focus:ring focus:ring-gray-300 focus:ring-opacity-50"
                            type="password" name="password" placeholder="Password"
                            ng-model="$ctrl.auth.password" required
                        )
                .mb-5
                    label(for="AppAuthRegisterPasswordConfirm")
                        input#AppAuthRegisterPasswordConfirm.mt-2.p-4.w-full.block.rounded-md.border.border-gray-300.focus_o-300(
                            class="focus:ring focus:ring-gray-300 focus:ring-opacity-50"
                            type="password" name="password_confirmation" placeholder="Confirm password"
                            ng-model="$ctrl.auth.password_confirmation" required
                        )

                button.bg-yellow-300.py-4.w-full.rounded-lg(
                    type="button" ng-click="$ctrl.register()"
                    ng-if="($ctrl.auth.name.length > 0 && $ctrl.auth.email.length > 0 && $ctrl.auth.password.length > 0 && $ctrl.auth.password_confirmation.length > 0 && ($ctrl.auth.password === $ctrl.auth.password_confirmation))"
                ) Register

                name
                email
                password
                password_confirm
            hr.my-5

            .text-center
                a.no-underline.cursor-pointer(ng-click="$ctrl.openAuthLoginModal()") Login
